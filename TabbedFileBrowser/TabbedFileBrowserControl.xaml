<UserControl x:Class="TabbedFileBrowser.TabbedFileBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabbedFileBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>

        <!-- TODO: Find some way to style all controls at once, to make this DRY -->

        <ListBox
            x:Name="tabsList"
            DockPanel.Dock="Top"
            Margin="5"
            ItemsSource="{Binding Tabs}"
            SelectedIndex="{Binding SelectedTabIndex}">
            
            <!-- Make the listbox display the tabs horizontally -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>

                    <VirtualizingStackPanel 
                        IsItemsHost="True"
                        Orientation="Horizontal"/>
                    
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock Text="{Binding}" Margin="0,0,5,0"/>
                        <Button 
                            Content="x"
                            Click="CloseButton_Click"/>

                    </StackPanel>
                    
                </DataTemplate>
            </ListBox.ItemTemplate>
            
        </ListBox>

        <TextBox 
            DockPanel.Dock="Top"
            Margin="5"
            Text="{Binding CurrentTab.CurrentFolder, Mode=OneWay}"/>
        
        <ListBox 
            DockPanel.Dock="Top"
            Margin="5"
            ItemsSource="{Binding CurrentTab.VisibleFiles}"/>
        
    </DockPanel>
</UserControl>
